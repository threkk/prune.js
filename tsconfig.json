{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist/",
    "paths": { "*": ["types/*"] },
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["lib/**/*", "bin/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
